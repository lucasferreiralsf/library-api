{
  "name": "library-api",
  "version": "0.0.1",
  "description": "A library api with express, mongodb and passport.",
  "author": {
    "name": "Lucas Ferreira",
    "email": "lucasferreiralsf@hotmail.com"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/express-validator": "^3.0.0",
    "@types/jest": "^24.0.23",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/method-override": "^0.0.31",
    "@types/mongoose": "^5.5.32",
    "@types/mongoose-paginate-v2": "^1.0.5",
    "@types/node": "^8.0.29",
    "@types/passport": "^1.0.2",
    "@types/passport-jwt": "^3.0.3",
    "@types/supertest": "^2.0.8",
    "jest": "^24.9.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0",
    "ts-node": "3.3.0",
    "typescript": "3.3.3333"
  },
  "dependencies": {
    "@types/date-fns": "^2.6.0",
    "bcrypt": "^3.0.7",
    "body-parser": "^1.18.1",
    "date-fns": "^2.8.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.3.0",
    "jsonwebtoken": "^8.5.1",
    "method-override": "^3.0.0",
    "mongodb": "^3.0.8",
    "mongoose": "^5.7.13",
    "mongoose-paginate-v2": "^1.3.52",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.10"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon --watch \"src/\" --exec \"ts-node src/index.ts\" -e ts",
    "build": "tsc",
    "prod": "npm run build && node dist/index.js",
    "test": "jest --no-cache"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
